<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/PrimaryBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/convergence</item>
        <item name="fontFamily">@font/convergence</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/PrimaryBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
