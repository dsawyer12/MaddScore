<!--                        android:drawableStart="@drawable/ic_comment_white"-->
<!--                        android:layout_marginStart="5dp"-->
<!--                        android:layout_gravity="center"/>-->

                </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>