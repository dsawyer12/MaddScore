<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/search_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/search_back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />

                <EditText
                    android:id="@+id/search_player"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:drawablePadding="20dp"
                    android:background="@drawable/text_input_border"
                    android:hint="Search..."
                    android:inputType="textCapWords"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search_light" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/squad_add_radio_group"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/squad_add_username_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@color/grey"
                    android:text="Username"/>

                <RadioButton
                    android:id="@+id/squad_add_phone_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="56dp"
                    android:text="Phone number"/>

            </RadioGroup>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"/>

            <TextView
                android:id="@+id/no_results_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                android:text="No results found."/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>