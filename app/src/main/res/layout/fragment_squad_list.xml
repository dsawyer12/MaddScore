<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackground">

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:layout_below="@id/appBar">

        <LinearLayout
            android:id="@+id/linLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayout3"
            android:background="@drawable/accessory_bottom_border_dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/squad_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingStart="18dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/rank_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rank #"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingStart="18dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linLayout"
            android:background="@color/PrimaryBackground">

            <ListView
                android:id="@+id/squad_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

            </ListView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_squad_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:paddingTop="8dp"
            android:background="@drawable/accessory_full_border"
            android:text="You are currently not a member of any squad. Squad information such as rank, squad name and the number of members in the squad will be available once joined."
            android:paddingLeft="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/join_squad_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_accessory"
            android:text="Join a squad"
            android:clickable="true"/>

        <Button
            android:id="@+id/create_squad_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/join_squad_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_accessory"
            android:text="Create a squad"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>