<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackground"
    android:id="@+id/card_add_player_fragment">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/removePlayerBtn">

                <TextView
                    android:id="@+id/remove_player_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select players to remove"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/accessory_bottom_border_dark" />

                <ListView
                    android:id="@+id/remove_player_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/remove_player_text"
                    android:layout_marginTop="10dp">

                </ListView>

        </RelativeLayout>

    <Button
        android:id="@+id/removePlayerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:background="@drawable/button_accessory"
        android:text="Remove Player(s)"/>

</RelativeLayout>